<div class="container">
	<div class="page-header">
		<h1>Callings</h1>
	</div>

	<div class="well text-center">
		<form role="form" class="form-inline">
			<div class="form-group">
				<div class="radio">
					<label>
						<input type="radio" class="form-control" name="type" id="typeC" value="C" checked="checked"/>
						Call
					</label>
				</div>
			</div>
			<div class="form-group">
				<div class="radio">
					<label>
						<input type="radio" class="form-control" name="type" id="typeR" value="R"/>
						Release
					</label>
				</div>
			</div>
			<div class="form-group">
				<input type="text" class="form-control" name="position" id="person" placeholder="person's name"/>
			</div>

			to/from

			<div class="form-group">
				<input type="text" class="form-control" name="position" id="position" placeholder="position"/>
			</div>

			by

			<div class="form-group">
				<input type="text" class="form-control" name="owner" id="owner" placeholder="owner"/>
			</div>
			<div class="form-group">
				<button type="button" class="btn btn-primary">Save</button>
			</div>
		</form>
	</div>

	<div class="container">
	</div>

	<div class="row">
		<div class="col-sm-3 text-center">
			<h4>To Extend</h4>
			<ul class="list-group">
				<% 5.times do %>
				<li class="list-group-item">
					Call Person to Position (Owner)
					<button type="button" class="btn btn-default btn-sm">
						<span class="glyphicon glyphicon-hand-left"></span>
					</button>
					<button type="button" class="btn btn-default btn-sm">
						<span class="glyphicon glyphicon-pencil"></span>
					</button>
					<button type="button" class="btn btn-default btn-sm">
						<span class="glyphicon glyphicon-remove"></span>
					</button>
					<button type="button" class="btn btn-default btn-sm">
						<span class="glyphicon glyphicon-hand-right"></span>
					</button>
				</li>
				<% end %>
			</ul>
		</div>

		<div class="col-sm-3 text-center">
			<h4>To Announce</h4>
		</div>

		<div class="col-sm-3 text-center">
			<h4>To Set Apart</h4>
		</div>

		<div class="col-sm-3 text-center">
			<h4>To Record</h4>
		</div>
	</div>
</div>
